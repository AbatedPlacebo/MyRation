<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/answer_text_view"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/a"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/first_button"
            android:layout_width="175dp"
            android:layout_height="80dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#5BD91B"
            android:text="@string/first_answer"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/second_button"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#E33328"
            android:text="@string/second_answer"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/third_button"
            android:layout_width="177dp"
            android:layout_height="69dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#E33328"
            android:text="@string/third_answer"
            android:textSize="20sp" />
        <!--<RadioButton
            android:id="@+id/fourth_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:backgroundTint="#E33328"
            android:text="Орехи"
            android:textSize="20sp" />
        <RadioButton
            android:id="@+id/fiveth_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Молоко"
            android:backgroundTint="#E33328"
            android:textSize="20sp" />
        <RadioButton
            android:id="@+id/sixth_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Рыба"
            android:backgroundTint="#E33328"
            android:textSize="20sp" /> -->
    </RadioGroup>

    <EditText
        android:id="@+id/input_text"
        android:layout_width="105dp"
        android:layout_height="63dp"
        android:inputType="number"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/hint_text"
        android:layout_width="73dp"
        android:layout_height="43dp"
        android:text=""
        android:textSize="10dp" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="194dp"
        android:layout_height="59dp"
        android:layout_marginTop="200dp"
        android:text="Далее"
        app:cornerRadius="35dp" />

</LinearLayout>